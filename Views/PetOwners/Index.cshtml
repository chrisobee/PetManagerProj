@model PetManager.ViewModels.TasksAndPetsVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-3">
        <table>
            <thead>
                <tr>
                    <th>Pet Name</th>
                    <th>Animal Type</th>
                </tr>
            </thead>
            @foreach (Pet pet in Model.CurrentUsersPets)
            {
                <tr>
                    <td>@pet.Name</td>
                    <td>@pet.AnimalType.Name</td>
                </tr>
            }
            <tr><td><a asp-controller="Pets" asp-action="Create">Add New Pet</a></td></tr>
        </table>
        
    </div>
    <div class="col-md-9" style="background-color:grey;">
        <table>
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Task Completed</th>
                </tr>
            </thead>
            @foreach(ToDoTask task in Model.CurrentUsersTasks)
            {
                <tr>
                    <td>@task.TaskName</td>
                    <td><a class="btn btn-primary" asp-controller="ToDoTasks" asp-action="CheckOffTask" asp-route-id="@task.TaskId">Check Off Task</a></td>
                </tr>
            }
        <tr>
            <td><a asp-controller="ToDoTasks" asp-action="Create">Add New Task</a></td>
        </tr>
        </table>
    </div>
</div>
