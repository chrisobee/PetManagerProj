@model PetManager.ViewModels.TasksAndPetsVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetOwner.LastName)
            </th>
        </tr>
    </thead>

</table>
<div class="row">
    <div class="col-md-3">
        <table>
            <thead>
                <tr>
                    <th>Pet Name</th>
                    <th>Animal Type</th>
                </tr>
            </thead>
            @foreach (Pet pet in Model.CurrentUsersPets)
            {
                <tr>
                    <td>@pet.Name</td>
                    <td>@pet.AnimalType.Name</td>
                </tr>
            }
            <tr><td><a asp-controller="Pets" asp-action="Create">Add New Pet</a></td></tr>
        </table>
        
    </div>
    <div class="col-md-9" style="background-color:grey;">
        <table>
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Task Completed</th>
                </tr>
            </thead>
            @foreach(ToDoTask task in Model.CurrentUsersTasks)
            {
                <tr>
                    <td>@Html.DisplayFor(t => task.TaskName)</td>
                    <td>
                        @if (task.TaskCompleted == false)
                        {
                            <a class="btn btn-primary" asp-controller="ToDoTasksController" asp-action="CheckOffTask" asp-route-id="@task.TaskId">Check Off Task</a>
                        }
                        else
                        {
                            <a class="btn btn-secondary" asp-controller="ToDoTasksController" asp-action=""
                        }
                    </td>
                </tr>
            }
            <tr><a asp-controller="ToDoTasks" asp-action="Create">Add New Task</a></tr>
        </table>
    </div>
</div>
