@model PetManager.Models.ToDoTask

@{
    ViewBag.Title = "Details";
}

<h1>Task Info</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Task Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class="col-sm-2">
            Special Instructions
        </dt>
        @if (Model.SpecialInstructions == null)
        {
            <dd class="col-sm-10">
                N/A
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SpecialInstructions)
            </dd>
        }

        <dt class="col-sm-2">
            Pet
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Pet
        </dd>
        <dt class="col-sm-2">
            Task Interval
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Frequency.Interval)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.TaskId">Edit Task</a> 
    <a class="btn btn-primary" asp-controller="PetOwners" asp-action="Index">Back to Home</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.TaskId">Remove Task</a> 
</div>
